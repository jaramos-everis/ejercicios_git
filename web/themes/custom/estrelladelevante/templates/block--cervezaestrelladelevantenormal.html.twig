
{% set color = content.field_color_fondo[0]['#markup'] %}

<style>
  .block-header-background{
    width: 100%;
    height: 37vw;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 5em;
    padding-top: 5em;
  }
  .title-header{
    color: white;
    text-align: center;
  }
  .title-header div{
    font-size: 5.29rem;
    line-height: 6.14rem;
    letter-spacing: -0.12rem;
  }

  footer {
    background-color: {{ color }};
    color: white !important;
  }
  footer a{
    color: white !important;
  }
  footer a:hover{
    color: rgb(232, 202, 5) !important;
  }

   .historia-container div[data-quickedit-field-id *= "/body/"], .historia-container div[data-quickedit-field-id *= "/field_titulo_bloque/"]{
     color: {{ color }} !important;
   }
</style>

{% set background_image = file_url(content.field_portada[0]['#media'].field_media_image.entity.uri.value) %}

<div class="block-header-container" style="background-color: {{ color }};">
  <div class="block-header-background" style="background-image: url('{{ background_image }}');">
    <h1 class="title-header">{{ content.field_titulo_cabecera }}</h1>
  </div>
</div>
